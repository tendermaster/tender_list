<!--form-->
<div class="relative overflow-hidden rounded-[2rem] bg-navy-900 p-8 shadow-2xl border border-white/10 glass" id="relevant_tenders_form">
  <div class="absolute top-0 right-0 w-32 h-32 bg-orange-500/10 rounded-full blur-3xl"></div>
  
  <a href="/#download-checklist" class="group relative block rounded-2xl overflow-hidden bg-gradient-to-r from-green-600 to-green-700 p-1 mb-8 shadow-lg hover:shadow-green-900/40 transition-all duration-300">
    <div class="bg-navy-900/10 dark:bg-black/20 px-4 py-3 rounded-[0.9rem] flex items-center justify-center text-center">
      <span class="text-white font-bold leading-tight">
        Click to Download Toolkit <br/> 
        <span class="text-green-300 text-xs font-medium">Get Industry-Specific Dockets</span>
      </span>
      <svg class="w-5 h-5 ml-2 text-white group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
    </div>
  </a>

  <h5 class="block mb-8 text-center text-xl font-bold text-white">Get Customized Recommendations</h5>

  <%= form_with(url: get_relevant_tenders_post_path, id: 'relevant-tenders-form', class: 'space-y-5') do |form| %>
    <div class="space-y-2">
      <%= form.label :name, 'Full Name', class: 'text-sm font-semibold text-gray-400 ml-1' %>
      <%= form.text_field :name, required: true, class: 'w-full px-5 py-4 bg-white/5 border border-white/10 rounded-2xl text-white focus:ring-2 focus:ring-orange-500 transition-all placeholder-gray-500', placeholder: 'Enter your name' %>
    </div>
    
    <div class="space-y-2">
      <%= form.label :email, 'Business Email', class: 'text-sm font-semibold text-gray-400 ml-1' %>
      <%= form.email_field :email, placeholder: 'email@company.com', required: true, class: 'w-full px-5 py-4 bg-white/5 border border-white/10 rounded-2xl text-white focus:ring-2 focus:ring-orange-500 transition-all placeholder-gray-500' %>
    </div>

    <div class="space-y-2">
      <%= form.label :mobile, 'Mobile Number', class: 'text-sm font-semibold text-gray-400 ml-1' %>
      <%= form.telephone_field :mobile, required: true, class: 'w-full px-5 py-4 bg-white/5 border border-white/10 rounded-2xl text-white focus:ring-2 focus:ring-orange-500 transition-all placeholder-gray-500', placeholder: '+91' %>
    </div>

    <div class="space-y-2">
      <%= form.label :sectors, 'Industries of Interest', class: 'text-sm font-semibold text-gray-400 ml-1' %>
      <%= form.text_area :sectors, rows: 3, class: 'w-full px-5 py-4 bg-white/5 border border-white/10 rounded-2xl text-white focus:ring-2 focus:ring-orange-500 transition-all placeholder-gray-500', placeholder: 'e.g. Construction, Tech, Manpower...' %>
    </div>

    <div class="py-2 flex justify-center">
      <%= recaptcha_tags theme: 'dark' %>
    </div>

    <%= form.submit 'Send Inquiry', class: 'w-full py-5 bg-orange-600 hover:bg-orange-700 text-white font-bold rounded-2xl transition-all shadow-xl shadow-orange-900/40 hover:scale-[1.02] active:scale-[0.98]' %>
  <% end %>
</div>
