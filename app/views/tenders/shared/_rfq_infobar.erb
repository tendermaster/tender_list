<%#
  app/views/tenders/shared/_rfq_hero_section.html.erb
  
  RFQ Hero Section with action buttons - compact orange theme
%>

<%# You can set these URLs in a controller or helper for better practice %>
<% rfq_form_url = "https://docs.google.com/forms/d/e/1FAIpQLSdxwWu0AdDvefTD50W7v7ktAZqk2CBSiTevFRCvm5-ti2iiMg/viewform?usp=header" %> <%# Replace with actual RFQ form URL %>
<% supplier_registration_url = "https://docs.google.com/forms/d/e/1FAIpQLSdcMgWEc8Ep7ELPXtXpzkf1Gd_ZLQm0Z9CcJZryYCwB4AUJ-A/viewform?usp=header" %> <%# Replace with actual supplier registration URL %>

<div class="bg-orange-100 border-b border-orange-200 text-orange-900 mb-8 rounded-xl" role="banner">
  <div class="mx-auto px-3 sm:px-4 py-3">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 sm:gap-x-6 sm:gap-y-2">

      <!-- Icon and Text Content -->
      <div class="flex items-start sm:items-center gap-x-3 min-w-0 flex-1">
        <div class="flex-shrink-0 mt-0.5 sm:mt-0">
          <!-- Document Icon (Heroicons) -->
          <svg class="h-5 w-5 sm:h-6 sm:w-6 text-orange-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z"/>
          </svg>
        </div>
        <div class="min-w-0 flex-1">
          <p class="text-xs sm:text-sm leading-5 sm:leading-6">
            <strong class="font-semibold">Beyond this tender, use our platform to source any product, service, or solution.</strong>
            <span class="hidden sm:inline"><br /></span>
            <span class="sm:hidden"> </span>
            <span class="block sm:inline">Get direct quotes or register as a qualified provider.</span>
          </p>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col xs:flex-row sm:flex-row flex-shrink-0 gap-2 sm:gap-x-3 w-full sm:w-auto">
        <!-- Primary CTA Button -->
        <a href="<%= rfq_form_url %>" target="_blank" class="rounded-md bg-orange-600 px-3 sm:px-3.5 py-1.5 text-xs sm:text-sm font-semibold text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600 transition-colors text-center whitespace-nowrap">
          Submit Your RFQ
        </a>

        <!-- Secondary Button -->
        <a href="<%= supplier_registration_url %>" target="_blank" class="rounded-md border border-orange-300 bg-white px-3 sm:px-3.5 py-1.5 text-xs sm:text-sm font-semibold text-orange-600 shadow-sm hover:bg-orange-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600 transition-colors text-center whitespace-nowrap">
          Become a Qualified Provider
        </a>
      </div>

    </div>
  </div>
</div>