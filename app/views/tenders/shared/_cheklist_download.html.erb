<!-- Download Checklist Section -->
<div id="download-checklist" class="bg-white rounded-2xl shadow-xl border border-gray-200 p-8 max-w-2xl mx-auto">
  
  <!-- Header Section -->
  <div class="text-center mb-8">
    <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
    </div>
    <h2 class="text-2xl font-bold text-gray-900 mb-2">Download Industry Toolkit</h2>
    <p class="text-gray-600 leading-relaxed">
      Get comprehensive checklists, templates, and guides tailored to your industry. 
      Everything you need to succeed in government tenders.
    </p>
  </div>

  <!-- Benefits Section -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
    <div class="text-center p-4 bg-blue-50 rounded-lg">
      <svg class="w-8 h-8 text-blue-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <h3 class="font-semibold text-gray-900 text-sm">Comprehensive</h3>
      <p class="text-xs text-gray-600">Complete industry guides</p>
    </div>
    <div class="text-center p-4 bg-green-50 rounded-lg">
      <svg class="w-8 h-8 text-green-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
      </svg>
      <h3 class="font-semibold text-gray-900 text-sm">Instant Access</h3>
      <p class="text-xs text-gray-600">Download immediately</p>
    </div>
    <div class="text-center p-4 bg-purple-50 rounded-lg">
      <svg class="w-8 h-8 text-purple-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
      </svg>
      <h3 class="font-semibold text-gray-900 text-sm">Expert Curated</h3>
      <p class="text-xs text-gray-600">Professional templates</p>
    </div>
  </div>

  <!-- Form Section -->
  <%= form_with url: url_for(checklist_download_path), class: 'space-y-6', id: 'checklist-form' do |f| %>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :full_name, 'Full Name', class: 'block text-sm font-medium text-gray-700 mb-2' %>
        <%= f.text_field :full_name, required: true, class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors', placeholder: 'Enter your full name' %>
      </div>
      
      <div>
        <%= f.label :phone, 'Phone Number', class: 'block text-sm font-medium text-gray-700 mb-2' %>
        <%= f.telephone_field :phone, required: true, class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors', placeholder: '+91 9876543210' %>
      </div>
    </div>

    <div>
      <%= f.label :email, 'Email Address', class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.email_field :email, required: true, class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors', placeholder: 'your.email@company.com' %>
    </div>

    <div>
      <%= f.label :report_type, 'Select Industry Toolkit', class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= f.select :report_type, checklist_options('form'), { prompt: 'Choose your industry...' }, { class: 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors bg-white', required: true } %>
      <p class="text-xs text-gray-500 mt-1">Select the industry most relevant to your business</p>
    </div>

    <!-- reCAPTCHA -->
    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
      <%= recaptcha_tags %>
    </div>

    <!-- Submit Button -->
    <div class="pt-2">
      <%= f.submit "Download Industry Toolkit", class: 'w-full bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold py-4 px-6 rounded-lg transition-all duration-200 transform hover:scale-102 shadow-lg hover:shadow-xl focus:outline-none focus:ring-4 focus:ring-blue-200 flex items-center justify-center' %>
    </div>

  <% end %>

  <!-- Trust & Security -->
  <div class="mt-6 pt-6 border-t border-gray-200">
    <div class="flex flex-col sm:flex-row items-center justify-center text-xs text-gray-500 space-y-2 sm:space-y-0 sm:space-x-6">
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
        </svg>
        <span>100% Secure Download</span>
      </div>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884zM18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
        </svg>
        <span>No Spam Policy</span>
      </div>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1 text-purple-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        <span>Instant Access</span>
      </div>
    </div>
  </div>

</div>
