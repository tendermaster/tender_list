<%= render 'layouts/navbar' %>



<div class="md:grid md:grid-cols-3 pt-12 px-12 mx-auto max-w-6xl">
  <div class="md:col-span-2">

    <!-- <h4 class="text-lg font-bold flex justify-center pb-4 ml7"><span class="text-wrapper"><span class="letters">Trending Tenders of the Day (<%= DateTime.now.strftime("%d/%m/%Y") %>)</span></span></h4> -->
    <h4 class="mx-auto mb-6 font-bold text-red-800 rounded-lg tlt text-lg font- flex justify-center ml7 w-fit px-4" style="">
      <ul class="texts">
        <li data-out-effect="fadeOut" data-out-shuffle="true">Trending Tenders of the Day
          (<%= DateTime.now.strftime("%d/%m/%Y") %>)
        </li>
        <!-- <li data-in-effect="fadeIn">Trending Tenders of the Day (<%= DateTime.now.strftime("%d/%m/%Y %H:%M") %>)</li> -->
      </ul>
    </h4>

    <div class="md:grid md:grid-cols-3 flex flex-col items-center space-y-1">
      <% home_keyword_list.each do |keyword| %>
        <div class="h-full p-2">
          <a
            href="<%= keyword_tender_path(keyword: keyword.gsub(' ', '-')) %>"
            class="w-full md:h-full inline-flex items-center rounded-lg bg-orange-700 px-3 py-2 text-center text-sm font-medium text-white hover:bg-orange-800 focus:outline-none focus:ring-4 focus:ring-orange-300 dark:bg-orange-600 dark:hover:bg-orange-700 dark:focus:ring-orange-800"
          >
            <%= keyword %>
            <svg
              aria-hidden="true"
              class="ml-2 -mr-1 h-4 w-4"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </a>
        </div>
      <% end %>
    </div>
  </div>
  <div class="md:col-span-1 space-y-2 md:pl-6">
    <div class="text-2xl font-bold text-center mb-6">Tenders for Profit</div>
    <a class="text-lg block hover:underline hover:underline-offset-2" href="<%= tender_main_category_path %>">⭐ Tender
      Categories</a>

    <a class="text-lg block hover:underline hover:underline-offset-2" href="<%= tender_category_by_city_path %>">⭐
      Tender by City</a>
    <a class="text-lg block hover:underline hover:underline-offset-2" href="<%= tender_category_by_state_path %>">⭐
      Tender by State</a>
    <!--      <a class="text-lg block hover:underline hover:underline-offset-2" href="<%#= tender_category_by_organization_path %>">⭐ </a>-->
    <a class="text-lg block hover:underline hover:underline-offset-2" href="<%= tender_category_by_sector_path %>">⭐
      Tender by Sector</a>
    <a class="text-lg block hover:underline hover:underline-offset-2" href="<%= how_to_file_tender_path %>">⭐
      How to file tender?</a>
  </div>
