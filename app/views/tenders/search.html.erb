<%
  set_meta_tags(
    title: "#{@pagy.count} #{@query} in India - #{Date.today.year}".titleize,
    description: "#{@query} tenders in India.",
    keywords: "#{@query}, tenders, #{@query} tenders in India, #{@query} tenders"
  )
%>

<%= render 'layouts/navbar' %>

<div class="container-home">
  <!-- search bar -->
  <div class="mt-6">
    <%= render partial: 'tenders/tender_search', locals: {
      query: @query
    } %>
  </div>

  <!-- search result -->

  <h1 class="mt-8 mb-2 text-sm font-bold text-gray-700"><%= @query %> Tenders</h1>
  <h2 class="mb-8 text-xl font-bold">Results for: <%= @query %></h2>

  <div class="lg:grid grid-cols-12 gap-x-8">
    <div class="results space-y-6 col-span-8">
      <% @records.each do |result| %>
        <!-- result 1 -->
        <div
          class="max-w-4xl rounded-lg border border-gray-200 bg-white p-6 shadow-md dark:border-gray-700 dark:bg-gray-800"
        >
          <a href="/tender/<%= result.slug_uuid %>">
            <h3
              class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
            >
              <%#= hide title only if (tenderid) like (only title) (non paid acc) %>
              <% if User.can_fully_view_tender(current_user, result.submission_close_date) || !is_tender_id?(result.title) %>
                <%= result.title.capitalize %>
              <% else %>
                <div class="flex">
                  <p class="blur-md select- none">AAAAAAAAAA</p>
                  <div class="text-sm flex items-center">
                    <%= render 'tenders/plan_to_view_tender' %>
                  </div>
                </div>
              <% end %>
            </h3>
          </a>
          <h3 class="mb-3 font-normal text-gray-700 dark:text-gray-400">
            <%= result.description&.capitalize %>
          </h3>
          <% if !result.short_blog.nil? %>
            <div class="my-3 font-normal text-gray-700 dark:text-gray-400 prose whitespace-pre-line text-center mx-auto">
              <p><%= result.short_blog %></p>
            </div>
          <% end %>
          <a
            href="/tender/<%= result.slug_uuid %>"
            class="inline-flex items-center rounded-lg bg-orange-700 px-3 py-2 text-center text-sm font-medium text-white hover:bg-orange-800 focus:outline-none focus:ring-4 focus:ring-orange-300 dark:bg-orange-600 dark:hover:bg-orange-700 dark:focus:ring-orange-800"
          >
            Read more
            <svg
              aria-hidden="true"
              class="ml-2 -mr-1 h-4 w-4"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </a>
          <!-- days left -->
          <div
            class="ml-4 inline-flex items-center rounded-lg border-2 px-3 py-2 text-center text-sm font-medium <%= time_left(result.submission_close_date) >= 0 ? 'bg-green-500 text-white' : 'bg-red-200' %>"
          >
            <%= time_left_text(result.submission_close_date) %>
            <svg
              aria-hidden="true"
              class="ml-2 -mr-1 h-4 w-4"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-span-4 mt-10 lg:mt-0">
      <%= render "tenders/get_relevant_tenders_form" %>
    </div>
  </div>

</div>

<!-- pagination -->

<%= render 'layouts/pagy' %>

<%= render 'layouts/footer' %>
