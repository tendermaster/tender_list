<div id="<%= dom_id coupon %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Coupon code:</strong>
    <%= coupon.coupon_code %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= coupon.start_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End date:</strong>
    <%= coupon.end_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Validity seconds:</strong>
    <%= coupon.validity_seconds %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Is valid:</strong>
    <%= coupon.is_valid %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this coupon", coupon, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this coupon', edit_coupon_path(coupon), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
